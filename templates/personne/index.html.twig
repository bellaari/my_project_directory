{% extends 'template.html.twig' %}

{% block pageTitle %}List des personnes{% endblock %}

{% block body %}
<div class="row">
    {% for personne in personnes %}
        <div class="col-3">
            <div class="p-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ personne.firstName }}</h5>
                        <h6 class="card-subtitle mb-2 text-body-secondary">{{ personne.lastName }}</h6>
                        <p class="card-text">{{ personne.age }}</p>
                        <a href="{{ path('personne.detail',{id:personne.id}) }}" class="card-link"><i class="fa-solid fa-circle-info"></i></a>
                        <a href="{{ path('delete_personne',{id:personne.id}) }}" class="card-link"><i class="fa-solid fa-trash"></i></a>
                        <a href="{{ path('personne.edit',{id:personne.id}) }}" class="card-link"><i class="fa-solid fa-user-pen"></i></a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>

{% if isPaginated is defined and isPaginated %}
    <div class="row mt-2">
        <nav aria-label="col Page navigation example">
            <ul class="pagination">
                {% if page != 1 %}
                    <li class="page-item"><a class="page-link" href="{{ path('personne.all', {page: page - 1, nbre: nbre}) }}">Previous</a></li>
                {% endif %}
                {% for i in range(1 ,nbrePage) %}
                    <li class="page-item"><a class="page-link" href="{{ path('personne.all', {page: i, nbre: nbre}) }}">{{ i }}</a></li>
                {% endfor %}
                {% if page != nbrePage %}
                    <li class="page-item"><a class="page-link" href="{{ path('personne.all', {page: page + 1, nbre: nbre}) }}">Next</a></li>
                {% endif %}
            </ul>
        </nav>
    </div>
{% endif %}

{% endblock %}
