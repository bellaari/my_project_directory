{% extends 'template.html.twig' %}

{% block pageTitle %}List des personnes{% endblock %}

{% block body %}
<div class="row">
    {% for personne in personnes %}
        <div class="col-3">
            <div class="p-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ personne.firstName }}</h5>
                        <h6 class="card-subtitle mb-2 text-body-secondary">{{ personne.lastName }}</h6>
                        <p class="card-text">{{ personne.age }}</p>
                        <a href="{{ path('personne.detail',{id:personne.id}) }}" class="card-link">Todo</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}
